<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.roadIncidents.RoadIncidentsFragment">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar_road_incidents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar_road_incidents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="@string/toolbar_tittle_road_incidents"
                    style="@style/Widget.RoadSafetyWatch.Toolbar"
                    tools:menu="@menu/menu_main"/>


            </com.google.android.material.appbar.AppBarLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>